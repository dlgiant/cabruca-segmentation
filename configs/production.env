# Production Environment Configuration
ENVIRONMENT=production
AWS_REGION=sa-east-1
AWS_ACCOUNT_ID=919014037196

# ECS Configuration
ECS_CLUSTER=cabruca-prod-cluster
ECS_SERVICE_API=cabruca-prod-api
ECS_SERVICE_STREAMLIT=cabruca-prod-streamlit
ECS_SERVICE_ANNOTATION=cabruca-prod-annotation

# ECR Repository
ECR_REPO=cabruca-prod

# ALB Configuration
ALB_NAME=cabruca-prod-alb
ALB_DNS=cabruca-prod-alb.sa-east-1.elb.amazonaws.com

# Task Configuration
TASK_CPU=1024
TASK_MEMORY=2048
DESIRED_COUNT=2

# Auto Scaling
MIN_INSTANCES=2
MAX_INSTANCES=10
TARGET_CPU_UTILIZATION=70

# Monitoring
ENABLE_DETAILED_MONITORING=true
LOG_RETENTION_DAYS=30
ALARM_EMAIL=production-alerts@cabruca.com

# Security
REQUIRE_HTTPS=true
ENABLE_WAF=true
ENABLE_SHIELD=false

# Cost Controls
ENABLE_COST_ALERTS=true
MONTHLY_BUDGET_LIMIT=1000

# Feature Flags
ENABLE_DEBUG_MODE=false
ENABLE_PROFILING=false
ENABLE_CACHE=true
CACHE_TTL=3600