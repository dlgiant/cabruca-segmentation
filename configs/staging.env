# Staging Environment Configuration
ENVIRONMENT=staging
AWS_REGION=sa-east-1
AWS_ACCOUNT_ID=919014037196

# ECS Configuration
ECS_CLUSTER=cabruca-stg-cluster
ECS_SERVICE_API=cabruca-stg-api
ECS_SERVICE_STREAMLIT=cabruca-stg-streamlit
ECS_SERVICE_ANNOTATION=cabruca-stg-annotation

# ECR Repository
ECR_REPO=cabruca-stg

# ALB Configuration
ALB_NAME=cabruca-stg-alb
ALB_DNS=cabruca-stg-alb-428619257.sa-east-1.elb.amazonaws.com

# Task Configuration
TASK_CPU=256
TASK_MEMORY=512
DESIRED_COUNT=1

# Auto Scaling
MIN_INSTANCES=1
MAX_INSTANCES=3
TARGET_CPU_UTILIZATION=80

# Monitoring
ENABLE_DETAILED_MONITORING=true
LOG_RETENTION_DAYS=7
ALARM_EMAIL=staging-alerts@cabruca.com

# Security
REQUIRE_HTTPS=false
ENABLE_WAF=false
ENABLE_SHIELD=false

# Cost Controls
ENABLE_COST_ALERTS=true
MONTHLY_BUDGET_LIMIT=200

# Feature Flags
ENABLE_DEBUG_MODE=true
ENABLE_PROFILING=true
ENABLE_CACHE=false
CACHE_TTL=60