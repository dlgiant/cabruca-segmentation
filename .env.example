# Example environment variables for Cabruca Segmentation
# Copy this file to .env and update with your values

# Model Configuration
MODEL_PATH=outputs/checkpoint_best.pth
DEVICE=auto

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Data Paths
DATA_DIR=data/
PLANTATION_DATA_PATH=plantation-data.json

# Optional Services
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgresql://user:password@localhost/cabruca_db

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET=cabruca-models

# Monitoring (Optional)
WANDB_API_KEY=your_wandb_key
MLFLOW_TRACKING_URI=http://localhost:5000

# Security
API_KEY=your_secure_api_key
SECRET_KEY=your_secret_key_here
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Debug
DEBUG=false
LOG_LEVEL=INFO