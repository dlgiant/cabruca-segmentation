# Example environment variables for Cabruca Segmentation
# Copy this file to .env and update with your values

# ========================================
# DEPLOYMENT CONFIGURATION
# ========================================

# AWS Configuration (REQUIRED)
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=sa-east-1
AWS_ACCOUNT_ID=your_account_id_here

# Environment Settings
ENVIRONMENT=prod
PROJECT_NAME=cabruca-segmentation

# ========================================
# MULTI-AGENT SYSTEM CONFIGURATION
# ========================================

# AgentOps Configuration (REQUIRED for monitoring)
AGENTOPS_API_KEY=your_agentops_api_key_here
AGENTOPS_PARENT_KEY=optional_parent_key
AGENTOPS_TAGS=production,multi-agent,cabruca

# Agent Settings
AGENT_LOG_LEVEL=INFO
AGENT_TIMEOUT_SECONDS=300
AGENT_MAX_RETRIES=3
AGENT_ORCHESTRATION_ENABLED=true

# ========================================
# COST & MONITORING CONFIGURATION
# ========================================

# Alert Configuration (REQUIRED for production)
ALERT_EMAIL=your-email@example.com
ALERT_PHONE=+55-11-9XXXX-XXXX
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Cost Thresholds (USD)
COST_ALERT_THRESHOLD=100
COST_HARD_LIMIT=150
MONTHLY_BUDGET=200

# ========================================
# MODEL & DATA CONFIGURATION
# ========================================

# Model Configuration
MODEL_PATH=outputs/checkpoint_best.pth
DEVICE=auto
ML_INSTANCE_TYPE=ml.t3.medium

# Data Paths
DATA_DIR=data/
PLANTATION_DATA_PATH=plantation-data.json

# S3 Buckets (will be auto-created)
S3_MODELS_BUCKET=cabruca-models
S3_DATA_BUCKET=cabruca-data
S3_ARTIFACTS_BUCKET=cabruca-artifacts

# ========================================
# API CONFIGURATION
# ========================================

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_ENDPOINT=  # Will be populated after deployment

# Security
API_KEY=your_secure_api_key_here
SECRET_KEY=your_secret_key_here
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ========================================
# LLM CONFIGURATION (Optional)
# ========================================

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your_key_here

# LLM Settings
DEFAULT_LLM_MODEL=gpt-4-turbo-preview
DEFAULT_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# ========================================
# OPTIONAL SERVICES
# ========================================

# Redis (disabled for MVP)
ENABLE_REDIS=false
REDIS_URL=redis://localhost:6379

# PostgreSQL (disabled for MVP)
ENABLE_RDS=false
DATABASE_URL=postgresql://user:password@localhost/cabruca_db

# CloudFront CDN (disabled for MVP)
ENABLE_CLOUDFRONT=false

# GPU Support (disabled for MVP)
ENABLE_GPU=false

# ========================================
# MONITORING SERVICES (Optional)
# ========================================

# Weights & Biases
WANDB_API_KEY=your_wandb_key
WANDB_PROJECT=cabruca-segmentation

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000

# Prometheus
PROMETHEUS_PORT=8000
PROMETHEUS_ENABLED=false

# X-Ray Tracing
ENABLE_XRAY=true

# ========================================
# DEBUG & DEVELOPMENT
# ========================================

# Debug Settings
DEBUG=false
LOG_LEVEL=INFO
VERBOSE_LOGGING=false

# Development Features
AUTO_SHUTDOWN_DEV=true
SHUTDOWN_SCHEDULE="0 22 * * MON-FRI"

# ========================================
# TERRAFORM VARIABLES (Auto-populated)
# ========================================

# These will be set by the deployment script
TF_VAR_aws_access_key=${AWS_ACCESS_KEY_ID}
TF_VAR_aws_secret_key=${AWS_SECRET_ACCESS_KEY}
TF_VAR_alert_email=${ALERT_EMAIL}
TF_VAR_alert_phone=${ALERT_PHONE}
TF_VAR_cost_alert_threshold=${COST_ALERT_THRESHOLD}
TF_VAR_api_endpoint=${API_ENDPOINT}